---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE, PERSONAL_INFO } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="hero">
				<h1>üëã Hello, I'm Ayoob Al-Delaimy</h1>
				<p class="subtitle">Computer Engineering Student & Software Engineer</p>
				<p class="contact-info">
					üìß {PERSONAL_INFO.email} ‚ãÑ üì± {PERSONAL_INFO.phone} ‚ãÑ üåê {PERSONAL_INFO.website}
				</p>
			</div>

			<section class="about">
				<h2>About Me</h2>
				<p>
					I'm a passionate Computer Engineering student at UC San Diego with a strong foundation in both software development and embedded systems. 
					Currently serving as Founding Engineer & CEO at FiNDi, I'm building innovative solutions that bridge international commerce gaps.
				</p>
				<p>
					My expertise spans from full-stack web development to embedded systems and machine learning. 
					I love tackling complex problems and creating solutions that make a real impact.
				</p>
			</section>

			<section class="education">
				<h2>Education</h2>
				<div class="education-item">
					<h3>{PERSONAL_INFO.education.university}</h3>
					<p class="degree">{PERSONAL_INFO.education.degree}</p>
					<p class="graduation">Expected {PERSONAL_INFO.education.graduation}</p>
					<p class="coursework">Relevant Coursework: Design and Analysis of Algorithms / Data Structures (C++) / Computer Architecture (C/Assembly) / Object-Oriented Programming (Java)</p>
				</div>
				<div class="education-item">
					<h3>{PERSONAL_INFO.education.communityCollege}</h3>
					<p class="degree">{PERSONAL_INFO.education.associateDegree}</p>
					<p class="graduation">{PERSONAL_INFO.education.associateGraduation}</p>
				</div>
			</section>

			<section class="skills">
				<h2>Technical Skills</h2>
				<div class="skills-grid">
					<div class="skill-category">
						<h3>Programming Languages</h3>
						<div class="skill-tags">
							{PERSONAL_INFO.skills.programmingLanguages.map((lang) => (
								<span class="skill-tag">{lang}</span>
							))}
						</div>
					</div>
					<div class="skill-category">
						<h3>Frameworks & Tools</h3>
						<div class="skill-tags">
							{PERSONAL_INFO.skills.frameworks.map((framework) => (
								<span class="skill-tag">{framework}</span>
							))}
						</div>
					</div>
					<div class="skill-category">
						<h3>Soft Skills</h3>
						<div class="skill-tags">
							{PERSONAL_INFO.skills.softSkills.map((skill) => (
								<span class="skill-tag">{skill}</span>
							))}
						</div>
					</div>
				</div>
			</section>

			<section class="cta">
				<h2>Let's Connect</h2>
				<p>
					I'm always interested in new opportunities and collaborations. 
					Check out my <a href="/blog">blog posts</a> for insights into my work, 
					or explore my <a href="/about">about page</a> for more details about my background and projects.
				</p>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.hero {
		text-align: center;
		margin-bottom: 3em;
		padding: 2em 0;
		border-bottom: 2px solid rgb(var(--gray-light));
	}

	.subtitle {
		font-size: 1.5em;
		color: var(--accent);
		margin: 0.5em 0;
		font-weight: 600;
	}

	.contact-info {
		font-size: 1.1em;
		color: rgb(var(--gray));
		margin: 1em 0;
	}

	section {
		margin: 3em 0;
	}

	.education-item {
		margin: 1.5em 0;
		padding: 1.5em;
		background: rgba(var(--gray-light), 0.3);
		border-radius: 8px;
		border-left: 4px solid var(--accent);
	}

	.degree {
		font-weight: 600;
		color: var(--accent);
		margin: 0.5em 0;
	}

	.graduation {
		color: rgb(var(--gray));
		font-style: italic;
		margin: 0.5em 0;
	}

	.coursework {
		font-size: 0.9em;
		color: rgb(var(--gray));
		margin: 1em 0 0 0;
	}

	.skills-grid {
		display: grid;
		gap: 2em;
		margin-top: 1.5em;
	}

	.skill-category h3 {
		color: var(--accent);
		margin-bottom: 1em;
	}

	.skill-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5em;
	}

	.skill-tag {
		background: var(--accent);
		color: white;
		padding: 0.3em 0.8em;
		border-radius: 20px;
		font-size: 0.9em;
		font-weight: 500;
	}

	.cta {
		text-align: center;
		padding: 2em;
		background: rgba(var(--gray-light), 0.2);
		border-radius: 8px;
		margin-top: 3em;
	}

	@media (max-width: 720px) {
		.skills-grid {
			grid-template-columns: 1fr;
		}
		
		.skill-tags {
			justify-content: center;
		}
	}
</style>
